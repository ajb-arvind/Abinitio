<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@color/black">
    <LinearLayout
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:weightSum="4">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/day_color"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20in">

                        <TextView
                            android:id="@+id/tvDay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:text="DD"
                            android:fontFamily="serif-monospace"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            android:textStyle="bold" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/hrs_color"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20in">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tvHrs"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:elevation="20dp"
                                    android:gravity="center"
                                    android:text="HH"
                                    android:textColor="@color/white"
                                    android:textSize="32sp"
                                    android:textStyle="bold"
                                    android:fontFamily="serif-monospace"
                                    android:layout_weight="3"/>
                        </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/min_color"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20in">

                        <TextView
                            android:id="@+id/tvMin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:text="MM"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/sec_color"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20in">

                        <TextView
                            android:id="@+id/tvSec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:text="SS"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace" />
                </android.support.v7.widget.CardView>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:weightSum="4">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/day_color"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="50in">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="20dp"
                                android:gravity="center"
                                android:text="DD"
                                android:fontFamily="serif-monospace"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/hrs_color"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="20in">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:elevation="20dp"
                                        android:gravity="center"
                                        android:text="HH"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:fontFamily="serif-monospace"
                                        android:layout_weight="3"/>
                            </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/min_color"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="20in">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="20dp"
                                android:gravity="center"
                                android:text="MM"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:fontFamily="serif-monospace"/>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/sec_color"
                        app:cardElevation="20in">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="20dp"
                                android:gravity="center"
                                android:text="SS"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:fontFamily="serif-monospace" />
                    </android.support.v7.widget.CardView>
            </LinearLayout>

    </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="-15dp"
            android:id="@+id/ivABLogo"
            android:src="@drawable/ab"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:layout_below="@+id/timer"
            android:fitsSystemWindows="true"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvMain"
            android:layout_below="@id/ivABLogo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:dividerHeight="10dp"
            android:divider="@null">
        </ListView>




        <!-- //TODO: For imran khan -->>



</RelativeLayout>