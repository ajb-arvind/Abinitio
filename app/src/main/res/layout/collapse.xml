<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dheeraj_bakground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@android:color/transparent"
            android:fitsSystemWindows="true"
            android:background="@color/dheeraj_bakground">

            <LinearLayout
                android:id="@+id/timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:background="@color/dheeraj_bakground"
                android:layout_marginTop="?attr/actionBarSize">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="@color/dheeraj_bakground">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/day_color"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="20in">

                        <TextView
                            android:id="@+id/tvDay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:text="DD"
                            android:fontFamily="serif-monospace"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/hrs_color"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="20in">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvHrs"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:elevation="20dp"
                                android:gravity="center"
                                android:text="HH"
                                android:textColor="@color/white"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:fontFamily="serif-monospace"
                                android:layout_weight="3"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/min_color"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="20in">

                        <TextView
                            android:id="@+id/tvMin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:text="MM"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace"/>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/sec_color"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="20in">

                        <TextView
                            android:id="@+id/tvSec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:text="SS"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/day_color"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="50in">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:text="DD"
                            android:fontFamily="serif-monospace"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/hrs_color"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="20in">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:elevation="20dp"
                                android:gravity="center"
                                android:text="HH"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:fontFamily="serif-monospace"
                                android:layout_weight="3"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/min_color"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="20in">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:text="MM"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace"/>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/sec_color"
                        app:cardElevation="20in">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="20dp"
                            android:gravity="center"
                            android:text="SS"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="serif-monospace" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_height="match_parent"
                android:id="@+id/ivAB"
                android:layout_width="match_parent"
                android:src="@drawable/ab"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fitsSystemWindows="true"
                android:contentDescription="@string/app_name"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarCollapsse"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/Theme.AppCompat.Light"
                app:title="@string/app_name"
                app:layout_collapseMode="pin" />


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:background="@color/dheeraj_bakground"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="3dp"
                android:elevation="4dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/dheeraj_foreground">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivMainCard1"
                        android:layout_width="80dp"
                        android:layout_height="105dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/calender"/>

                    <TextView
                        android:id="@+id/tvTitleCard1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/ivMainCard1"
                        android:layout_marginLeft="40dp"
                        android:text="Timetable"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView android:id="@+id/card2"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="3dp"
                android:elevation="4dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/dheeraj_foreground">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivMaincard2"
                        android:layout_width="80dp"
                        android:layout_height="105dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/book"/>

                    <TextView
                        android:id="@+id/tvTitlecard2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/ivMaincard2"
                        android:layout_marginLeft="40dp"
                        android:text="Events"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView android:id="@+id/card3"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="3dp"
                android:elevation="4dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/dheeraj_foreground">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivMaincard3"
                        android:layout_width="80dp"
                        android:layout_height="105dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/contact"/>

                    <TextView
                        android:id="@+id/tvTitlecard3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/ivMaincard3"
                        android:layout_marginLeft="40dp"
                        android:text="Co-Ordinator"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView android:id="@+id/card4"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="3dp"
                android:elevation="4dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/dheeraj_foreground">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivMaincard4"
                        android:layout_width="80dp"
                        android:layout_height="105dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/settings"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/tvTitlecard4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Setting"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/ivMaincard4"
                        android:layout_marginLeft="40dp"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>



</android.support.design.widget.CoordinatorLayout>
